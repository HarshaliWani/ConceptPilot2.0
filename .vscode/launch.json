{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: FastAPI Debugger",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      },
      "console": "integratedTerminal",
      "justMyCode": false,
      "preLaunchTask": null
    },
    {
      "name": "Frontend: Next.js Debugger",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ],
  "compounds": [
    {
      "name": "ðŸš€ Debug Full Stack",
      "configurations": [
        "Backend: FastAPI Debugger",
        "Frontend: Next.js Debugger"
      ],
      "stopAll": true,
      "preLaunchTask": null
    }
  ]
}
